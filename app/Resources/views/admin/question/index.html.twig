{% extends 'admin/template/page.html.twig' %}

{% block title %}<i class="fa fa-question-circle"></i> {{ 'title.question'|trans }}{% endblock %}
{% block subtitle %}<a href="{{ url('admin_question_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> {{ 'button.add'|trans}}</a>{% endblock %}

{% block body %}
    <table class="data table">
        <thead>
            <tr>
                <th class="id">#</th>
                <th>{{ 'table.question'|trans }}</th>
                <th data-orderable="false"></th>
            </tr>
        </thead>
        <tbody>
            {% for item in questions %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ url('admin_question_view', {'id': item.id}) }}" class="btn btn-success"><i class="fa fa-search"></i> {{ 'button.view'|trans }}</a>
                        <a href="{{ url('admin_question_edit', {'id': item.id}) }}" class="btn btn-info"><i class="fa fa-pencil"></i> {{ 'button.edit'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
