{% extends 'admin/template/page.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}<i class="fa fa-graduation-cap"></i> {{ 'title.year'|trans }}{% endblock %}

{% block body %}
    <div class="col-sm-offset-2 col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading">{{ 'find.user.form'|trans }}</div>
        <div class="panel-body">

            {{ form_start(form) }}
              {{ form_widget(form) }}

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                  <button type="submit" class="btn btn-default"><i class="fa fa-btn fa-search"></i> {{ 'button.search'|trans }}</button>
                </div>
              </div>
          {{ form_end(form) }}

        </div>
      </div>
    </div>

    <table class="data table">
        <thead>
            <tr>
                <th class="id">#</th>
                <th>{{ 'table.username'|trans }}</th>
                <th>{{ 'table.email'|trans }}</th>
                <th>{{ 'table.year'|trans }}</th>
                <th>{{ 'table.group'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for item in users %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.username }}</td>
                    <td>{{ item.email }}</td>
                    <td>{{ item.group.year }}</td>
                    <td>{{ item.group }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
