{% extends 'admin/template/page.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}
  <i class="fa fa-trash"></i> {{ 'active.action'|trans }} {{ test.name }} ({{ test.group }})
{% endblock %}

{% block body %}
  <div class="col-md-12">
    {{ form_start(form) }}
      {{ form_widget(form) }}
      <button type="submit" class="btn btn-success form"><i class="fa fa-check"></i> {{ 'button.active'|trans }}</button>
    {{ form_end(form) }}
  </div>
{% endblock %}
