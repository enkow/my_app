<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ 'login.action'|trans }}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {% stylesheets '@bootstrap_css' '@custom_css' '@admin_css' '@datatables_css' '@sweetalert_css' %}
      <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
  </head>
  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href=""><b>Admin</b>LTD</a>
      </div>

      <div class="login-box-body">
        <p class="login-box-msg">{{ 'log.into.admin.panel'|trans }}</p>
        <form action='{{ path('auth_login_check') }}' method="post">
          <div class="form-group has-feedback">
            <input type="text" id="username" class="form-control" placeholder="{{ 'form.login'|trans }}" name="login[username]" value="{{ lastUsername }}" required="required" />
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="password" id="password" class="form-control" name="login[password]" required="required" placeholder="{{ 'form.password'|trans }}" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-7">
              <div class="checkbox icheck">
                <a href="{{ url('admin_auth_reset') }}"><i class="fa fa-life-ring" aria-hidden="true"></i> {{ 'forgotten.password'|trans }}</a>
              </div>
            </div>

            <div class="col-xs-5">
              <input type="submit" id="submit" name="" value="{{ 'button.log.in'|trans }}" class="btn btn-primary btn-block btn-flat" />
            </div>
          </div>
        </form>
      </div>
      {% include 'admin/template/flash_message.html.twig' %}
      {% if error %}
        <div class="callout callout-danger col-sm-12 text-center" role="alert">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}
    </div>

    {% javascripts '@jquery' '@bootstrap_js' '@admin_js' '@datatables_js' '@sweetalert_js' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
  </body>
</html>
